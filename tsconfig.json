{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
